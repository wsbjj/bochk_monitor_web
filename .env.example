# BOCHK Appointment Monitor - Environment Configuration
# Copy this file to .env and fill in your actual values

# Monitor Settings
MONITOR_CHECK_DATES=20260213,20260214,20260215
MONITOR_INTERVAL_SECONDS=120
MONITOR_NOTIFY_ON_AVAILABLE=true
MONITOR_ALL_DATES=false

# Email Configuration
# Supported: QQ Mail (smtp.qq.com), Gmail (smtp.gmail.com), Outlook (smtp-mail.outlook.com), Office365 (smtp.office365.com)
MAIL_HOST=smtp.qq.com
MAIL_PORT=
# Leave MAIL_PORT empty for auto-detect, or specify: 465 (SSL) or 587 (TLS)
# Examples:
# - QQ Mail: MAIL_HOST=smtp.qq.com, MAIL_PORT=465
# - Gmail: MAIL_HOST=smtp.gmail.com, MAIL_PORT=587
# - Outlook: MAIL_HOST=smtp-mail.outlook.com, MAIL_PORT=587
# - Office365: MAIL_HOST=smtp.office365.com, MAIL_PORT=587

MAIL_USER=your_email@qq.com
MAIL_PASS=your_auth_code_here
SENDER=your_email@qq.com
RECEIVERS=receiver@example.com

# Basic Auth (Website Protection)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Resend API (Fallback Email)
RESEND_API_KEY=re_123456789
